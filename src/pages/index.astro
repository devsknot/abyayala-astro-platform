---
import BaseLayout from '../layouts/BaseLayout.astro';
import NewsCard from '../components/NewsCard.astro';
import CategoryTag from '../components/CategoryTag.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getAllArticles, getAllCategories } from '../utils/contentApi.js';

// Configuración para SSR
export const prerender = false;

// Definir interfaces para tipar correctamente los datos
interface Article {
  title: string;
  description?: string;
  pubDate?: string;
  date?: string;
  category?: string;
  featured_image?: string;
  image?: string;
  slug?: string;
  tags?: string[];
  author?: string;
  author_info?: any;
  content?: string;
  updated_at?: string;
}

interface ApiResponse {
  articles: Article[];
  pagination?: {
    page: number;
    pageSize: number;
    totalItems: number;
    totalPages: number;
    hasNextPage: boolean;
    hasPrevPage: boolean;
  };
  success?: boolean;
}

// Obtener artículos de la API
const articlesResponse = await getAllArticles(Astro.url.origin) as ApiResponse;

// Obtener categorías de la API
const categories = await getAllCategories(Astro.url.origin);

// Extraer el array de artículos de la respuesta
const articlesArray = articlesResponse && articlesResponse.articles ? articlesResponse.articles : [];

// Verificar en consola
console.log(`Artículos obtenidos: ${articlesArray.length}`);

// Ordenar por fecha de publicación (más reciente primero)
const sortedArticles = articlesArray.length > 0 
  ? articlesArray.sort((a: Article, b: Article) => {
      const dateA = new Date(a.pubDate || a.date || 0).valueOf();
      const dateB = new Date(b.pubDate || b.date || 0).valueOf();
      return dateB - dateA;
    })
  : [];

// Función para normalizar imágenes
const normalizeImage = (imagePath: string | undefined): string => {
  // Si no hay imagen o la ruta está causando 404
  if (!imagePath || imagePath.startsWith('media/uploads/') || 
      imagePath.includes('+') || imagePath.includes('%25')) {
    // Usar la imagen del Colectivo (logo sin fondo)
    return '/images/CAAY Logo sin fondo.png';
  }
  return imagePath;
};

// Obtener artículos destacados (los 4 más recientes)
const featuredNews = sortedArticles.slice(0, 4).map((article: Article) => {
  const index = sortedArticles.indexOf(article);
  return {
    title: article.title || 'Sin título',
    description: article.description || 'Sin descripción',
    pubDate: article.pubDate ? new Date(article.pubDate) : new Date(),
    category: article.category || 'general',
    image: normalizeImage(article.featured_image || article.image),
    slug: article.slug || '',
    featured: index === 0, // El primer artículo es el principal
    isNew: (new Date().getTime() - new Date(article.pubDate || article.date || 0).getTime()) < 7 * 24 * 60 * 60 * 1000 // Menos de 7 días
  };
});

// Obtener artículos recientes (los siguientes 6 después de los destacados)
const recentNews = sortedArticles.slice(4, 10).map((article: Article) => {
  return {
    title: article.title || 'Sin título',
    description: article.description || 'Sin descripción',
    pubDate: article.pubDate ? new Date(article.pubDate) : new Date(),
    category: article.category || 'general',
    image: normalizeImage(article.featured_image || article.image),
    slug: article.slug || ''
  };
});

// Mensaje para mostrar si no hay artículos
const noArticlesMessage = "No hay artículos disponibles en este momento. Por favor, vuelva a intentarlo más tarde.";
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <!-- Hero Section - Oculto por solicitud del cliente
  <section class="hero">
    <div class="hero-overlay">
      <div class="container">
        <h1>Voces del Campo</h1>
        <p>Noticias e historias del colectivo agrario Abya Yala</p>
      </div>
    </div>
  </section>
  -->

  <!-- Featured News Section -->
  <section id="featured-news" class="featured-news">
    <div class="container">
      <h2 class="section-title">Noticias Destacadas</h2>
      
      <!-- Contenido de noticias destacadas -->
      
      {featuredNews.length > 0 ? (
        <div class="featured-news-grid">
          <!-- Primera fila: Artículo principal destacado -->
          <div class="featured-row-main">
            {featuredNews.length > 0 && (
              <NewsCard 
                title={featuredNews[0].title}
                description={featuredNews[0].description}
                pubDate={featuredNews[0].pubDate}
                category={featuredNews[0].category}
                image={featuredNews[0].image}
                slug={featuredNews[0].slug}
                featured={true}
                isNew={featuredNews[0].isNew}
              />
            )}
          </div>
          
          <!-- Segunda fila: Artículos destacados secundarios -->
          <div class="featured-row-secondary">
            {featuredNews.slice(1, 4).map((news: any) => (
              <NewsCard
                title={news.title}
                description={news.description}
                pubDate={news.pubDate}
                category={news.category}
                image={news.image}
                slug={news.slug}
                featured={false}
                isNew={news.isNew}
              />
            ))}
          </div>
        </div>
      ) : (
        <div class="no-content-message">
          <p>{noArticlesMessage}</p>
        </div>
      )}
    </div>
  </section>

  <!-- Categories Section -->
  <section id="categories" class="categories-section">
    <div class="container">
      <h2 class="section-title">Explora por Categorías</h2>
      
      <!-- Listado de categorías -->
      
      {categories.length > 0 ? (
        <div class="categories-grid">
          {categories.map(category => (
            <a href={`/category/${category.id}`} class="category-card">
              <div class="category-icon">
                <CategoryTag category={category.id} size="large" absolute={false} />
              </div>
              <h3>{category.name}</h3>
              <p>{category.description}</p>
            </a>
          ))}
        </div>
      ) : (
        <div class="no-content-message">
          <p>No hay categorías disponibles en este momento.</p>
        </div>
      )}
    </div>
  </section>

  <!-- Recent News Section -->
  <section class="recent-news">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Noticias Recientes</h2>
        <a href="/news" class="view-all">Ver todas</a>
      </div>
      
      {recentNews.length > 0 ? (
        <div class="news-grid">
          {recentNews.map((news: any) => (
            <NewsCard 
              title={news.title}
              description={news.description}
              pubDate={news.pubDate}
              category={news.category}
              image={news.image}
              slug={news.slug}
            />
          ))}
        </div>
      ) : (
        <p class="no-articles">No hay artículos recientes disponibles en este momento.</p>
      )}
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section - Oculto por solicitud del cliente
  .hero {
    position: relative;
    height: 80vh;
    min-height: 500px;
    background-image: url('/hero-bg.jpg');
    background-size: cover;
    background-position: center;
    color: white;
    margin-bottom: 3rem;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.7));
    display: flex;
    align-items: center;
  }

  .hero h1 {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .hero p {
    font-size: 1.5rem;
    max-width: 600px;
  }
  */

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  section {
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 2rem;
    position: relative;
    display: inline-block;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 60px;
    height: 4px;
    background-color: var(--color-primary);
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .view-all {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 600;
    display: flex;
    align-items: center;
    transition: color 0.2s ease;
  }

  .view-all:hover {
    color: var(--color-primary-dark);
  }

  .view-all::after {
    content: '→';
    margin-left: 0.5rem;
    transition: transform 0.2s ease;
  }

  .view-all:hover::after {
    transform: translateX(3px);
  }

  .featured-news-grid {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    height: calc(100vh - 120px); /* Altura del viewport completo menos un margen */
    margin-bottom: 2rem;
    max-height: 900px; /* Altura máxima para pantallas muy grandes */
  }

  .featured-row-main {
    width: 100%;
    height: 40%; /* 40% del alto para la primera fila */
    min-height: 300px;
    max-height: 400px; /* Altura máxima para el artículo principal */
  }

  .featured-row-secondary {
    width: 100%;
    height: 60%; /* 60% del alto para la segunda fila */
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    min-height: 350px;
  }
  
  /* Ajuste para asegurar que el scroll muestre la siguiente sección */
  #featured-news {
    scroll-margin-top: 80px;
  }
  
  #categories {
    scroll-margin-top: 80px;
  }
  
  /* Aseguramos que las cards ocupen todo el espacio disponible */
  .featured-row-main :global(.news-card),
  .featured-row-secondary :global(.news-card) {
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  /* Aseguramos que las imágenes ocupen el espacio adecuado */
  .featured-row-main :global(.news-card-image) {
    height: 100%;
    max-height: 100%;
    overflow: hidden;
  }

  .featured-row-secondary :global(.news-card-image) {
    height: 180px;
    overflow: hidden;
  }

  /* Ajustes responsivos */
  @media (max-width: 1200px) {
    .featured-news-grid {
      height: auto;
      max-height: none;
    }
    
    .featured-row-main {
      min-height: 250px;
      height: auto;
    }
    
    .featured-row-secondary {
      height: auto;
      min-height: auto;
    }
  }
  
  @media (max-width: 992px) {
    .featured-row-secondary {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
    
    .featured-row-main {
      min-height: 220px;
    }
  }
  
  @media (max-width: 768px) {
    .featured-news-grid {
      gap: 2rem;
    }
    
    .featured-row-secondary {
      grid-template-columns: repeat(1, 1fr);
      gap: 2rem;
      margin-top: 1rem; /* Añadir margen superior adicional */
    }
    
    .featured-row-main {
      min-height: 200px;
      margin-bottom: 1rem; /* Añadir margen inferior adicional */
    }
  }
  
  @media (max-width: 480px) {
    .featured-row-main {
      min-height: 180px;
    }
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .category-card {
    background-color: var(--color-card-bg);
    border-radius: 8px;
    padding: 1.5rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    text-decoration: none;
    color: var(--color-text);
    display: flex;
    flex-direction: column;
  }

  .category-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .category-icon {
    margin-bottom: 1rem;
  }

  .category-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .category-card p {
    font-size: 0.95rem;
    color: var(--color-text-muted);
    line-height: 1.5;
  }

  .news-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .no-content-message {
    background-color: var(--color-card-bg);
    border-radius: 8px;
    padding: 2rem;
    text-align: center;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .no-content-message p {
    color: var(--color-text-muted);
    font-size: 1.1rem;
    margin-bottom: 1rem;
  }
  
  /* Estilos de depuración eliminados */

  @media (max-width: 992px) {
    .featured-news-grid {
      grid-template-columns: 1fr;
    }

    .featured-main {
      grid-column: 1;
      grid-row: auto;
    }

    .featured-secondary {
      grid-column: 1;
      grid-template-columns: repeat(3, 1fr);
      grid-template-rows: auto;
    }

    .news-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .featured-secondary {
      grid-template-columns: repeat(2, 1fr);
    }

    .news-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .section-title {
      font-size: 1.75rem;
    }
  }

  @media (max-width: 576px) {
    .featured-secondary {
      grid-template-columns: 1fr;
    }

    .news-grid {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: 1.5rem;
    }
  }
</style>
